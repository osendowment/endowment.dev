# Security headers for all pages
/*
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Strict-Transport-Security: max-age=31536000; includeSubDomains
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' https://stats.endowment.dev https://openpanel.dev https://js.stripe.com https://challenges.cloudflare.com; connect-src 'self' https://stats.endowment.dev https://data.endowment.dev https://*.every.org https://api.openpanel.dev https://challenges.cloudflare.com; img-src 'self' data: https:; font-src 'self' https://assets.every.org; style-src 'self' 'unsafe-inline'; frame-src https://*.every.org https://www.every.org https://js.stripe.com https://challenges.cloudflare.com; base-uri 'self'; form-action 'self' https://*.every.org

# Immutable cache for hashed Astro assets
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Long cache for fonts (immutable, versioned by filename)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable

# Long cache for static images (7 days)
/images/*
  Cache-Control: public, max-age=604800

# Long cache for JS assets (7 days)
/js/*
  Cache-Control: public, max-age=604800
