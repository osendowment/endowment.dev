<script>
    const urlParams = new URLSearchParams(window.location.search);
    const checkoutMessage = urlParams.get('checkoutMessage');
    if (checkoutMessage) {
        const $$checkoutAlert = document.querySelectorAll('.checkout-alert');
        $$checkoutAlert.forEach(($checkoutAlert) => {
            const $checkoutAlertSpan = $checkoutAlert.querySelector('p');
            $checkoutAlert.hidden = false;
            $checkoutAlertSpan.textContent = checkoutMessage;
        });
    }

    const $$cardTabbed = document.querySelectorAll('.card--tabbed');
    $$cardTabbed.forEach(($cardTabbed) => {
        const $$tabs = $cardTabbed.querySelectorAll('.card__tab');
        $$tabs.forEach(($tab) => {
            $tab.addEventListener('click', () => {
                $$tabs.forEach(($tab) => $tab.classList.remove('card__tab--active'));
                $tab.classList.add('card__tab--active');

                const $$tabContent = $cardTabbed.querySelectorAll('[data-tab-content]');
                $$tabContent.forEach(($tabContent) => $tabContent.hidden = true);

                const tabId = $tab.dataset.tabId;
                console.log(tabId);
                const $$ourTabContent = $cardTabbed.querySelectorAll(`[data-tab-content="${tabId}"]`);
                $$ourTabContent.forEach(($ourTabContent) => $ourTabContent.hidden = false);
            });
        });
    });

    const $$checkout = document.querySelectorAll('.checkout');
    $$checkout.forEach(($checkout) => {
        const $$checkoutBankButton = $checkout.querySelectorAll('.checkout__bank-button');
        const $$checkoutBankDetails = $checkout.querySelectorAll('.checkout__bank-details');
        $$checkoutBankButton.forEach(($checkoutBankButton) => {
            $checkoutBankButton.addEventListener('click', () => {
                $$checkoutBankDetails.forEach(($checkoutBankDetails) => {
                    $checkoutBankDetails.hidden = false;
                    // TODO: generate bank details
                });
            });
        });
    });
</script>
