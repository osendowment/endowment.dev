import Layout from '../layouts/Layout.astro';
---

<Layout>
    <div class="intro container" slot="hero">
        <div class="intro-text">
            <small>The world's first</small>
            <h2>Open Source<br>Endowment</h2>
            <hr>
            <small>
                Truly sustainable funding for critical OSS through a community&#x2011;driven
                endowment fund.
            </small>
        </div>
        <div class="intro-illu-container">
            <div class="intro-illu">
                <div class="illubox illubox--a">curl</div>
                <div class="illubox illubox--a">mpld3</div>
                <div class="illubox illubox--b illubox--ok">imagemagick</div>
                <div class="illubox illubox--b">iced</div>
                <div class="illubox illubox--c">xz</div>
                <div class="illubox illubox--c illubox--ok">log4j</div>
                <div class="illubox illubox--d illubox--ok">openssl</div>
                <div class="illubox illubox--d illubox--ok">git</div>
            </div>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="cardset">
                <div class="card">
                    <img src="/images/icons/squiggle.svg">
                    <h2>Sustainable</h2>
                    <p>
                        Provides stable, long-term funding for OSS maintenance, independent of
                        yearly donation cycles or short-term corporate budgets.
                    </p>
                </div>
                <div class="card">
                    <img src="/images/icons/balls.svg">
                    <h2>Systemic</h2>
                    <p>
                        Supports crucial 'long tail' of OSS&nbsp;—&nbsp;foundational projects vital
                        for the entire ecosystem, often overlooked by typical funding.
                    </p>
                </div>
                <div class="card">
                    <img src="/images/icons/assembly.svg">
                    <h2>Efficient</h2>
                    <p>
                        Maximizes impact with a community&#x2011;first, transparent digital operation,
                        attracting diverse support from tech and beyond.
                    </p>
                </div>
            </div>
        </div>
    </section>
</Layout>

<style>
    .intro {
        display: flex;
        flex-wrap: wrap;
        padding-top: 2rem;
        padding-bottom: 2rem;
        @media (max-width: 800px) {
            display: block;
            .intro-illu-container {
                margin-top: 3rem;
                margin-left: auto;
                margin-right: auto;
            }
        }
        .intro-text {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            color: white;
            small {
                display: block;
                font-size: 1.5rem;
                font-weight: normal;
                font-style: italic;
            }
            h2 {
                margin: 0;
                font-size: 4.0rem;
                @media (max-width: 800px) {
                    font-size: 2.5rem;
                }
                /* background-image: */
                /*     radial-gradient( */
                /*         ellipse at top left, */
                /*         var(--color-primary-bright), transparent), */
                /*     radial-gradient( */
                /*         ellipse at bottom right, */
                /*         var(--color-secondary-bright), transparent); */
                /* background-size: 100%; */
                /* background-clip: text; */
                /* -webkit-text-fill-color: transparent; */
            }
        }
        .intro-illu-container {
            flex: 0 0 16rem;
            width: 16rem;
            display: flex;
            align-items: center;
            justify-content: center;
            padding-top: 5rem;
        }
        .intro-illu {
            flex: 1;
            position: relative;
            background-image: url(/images/branches.svg);
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center center;
            height: 23rem;
            width: 16rem;
            .illubox {
                position: absolute;
                display: inline-block;
                padding: 0.3rem 0.8rem;
                border: 1px solid rgba(255, 255, 255, 0.5);
                border-radius: var(--border-radius-big);
                color: white;
                font-family: 'Raleway', 'Helvetia Neue', Helvetica, sans-serif;
                white-space: nowrap;
                transform: rotate(-50deg);
                transform-origin: left;
                &.illubox--a {
                    top: -7%;
                    left: 13%;
                }
                &.illubox--b {
                    top: 4%;
                    left: 36%;
                }
                &.illubox--c {
                    top: 12%;
                    left: 57%;
                }
                &.illubox--d {
                    top: 18%;
                    left: 78%;
                }
                &:before {
                    content: ' ';
                    display: inline-block;
                    height: 0.6rem;
                    width: 0.6rem;
                    margin-right: 0.6rem;
                    border-radius: 100%;
                    background: var(--color-warning);
                    animation: blink 2s ease-in-out infinite alternate;
                }
                &.illubox--ok:before {
                    background: var(--color-secondary);
                }
                &:nth-child(2n) {
                    animation: toggle 10s ease-in-out infinite alternate;
                }
                &:nth-child(2n+1) {
                    animation: toggle 10s ease-in-out infinite alternate-reverse;
                }
            }
        }
    }
</style>
