import Layout from '../layouts/Layout.astro';
---

<Layout title="Foundation Documents — Open Source Endowment" description="Official documents of the Open Source Endowment Foundation including bylaws, certificate of incorporation, board resolutions, and policies." breadcrumbs={[{name: "Home", url: "https://endowment.dev/"}, {name: "Docs", url: "https://endowment.dev/docs/"}]}>
    <article>
        <section class="pagesec pagesec--dark pagesec--tight">
            <div class="container">
                <div class="insec insec--xpad insec--ytight">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-sw-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="sechead sechead--min-height flex-center flex-column">
                        <h1>Docs</h1>
                        <p>
                            The Open Source Endowment Foundation is committed to outstanding transparency.
                            Learn more about our nonprofit through open
                            documents, public endpoints,
                            and <a href="/faq">FAQ</a>
                            — and feel free to discuss them on our
                            <a href="https://github.com/osendowment/foundation" target="_blank">GitHub repo</a>.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <section class="pagesec">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="category-listing">
                        <h2>Foundation</h2>
                        <div>
                            <ul>
                                <li>
                                    Open Source Endowment Foundation
                                </li>
                                <li>
                                    US 501(c)(3) tax-exempt charitable organization
                                </li>
                                <li>
                                    EIN 33-3502715
                                </li>
                                <li>
                                    <a href="/docs/bylaws">Bylaws</a>
                                </li>
                                <li>
                                    <a href="/docs/board-uwc">Initial Board Resolution</a>
                                </li>
                                <li>
                                    <a href="/docs/act-of-incorporator">Act of Sole Incorporator</a>
                                </li>
                                <li>
                                    <a href="/docs/certificate-of-incorporation">Certificate of Incorporation</a>
                                </li>
                                <li>
                                    <a href="https://github.com/osendowment/foundation/blob/main/docs/501c3/501c3-letter.pdf">501(c)(3) determination letter</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="category-listing">
                        <h2>Policies</h2>
                        <div>
                            <ul>
                                <li>
                                    <a href="/docs/membership-policy">Membership policy</a>
                                </li>
                                <li>
                                    <a href="https://github.com/osendowment/foundation/blob/main/docs/policies/coi-policy.pdf">Conflict of interest policy</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="category-listing">
                        <h2>Board resolutions and meeting minutes</h2>
                        <div>
                            <table class="board-table">
                                <tr>
                                    <td><time datetime="2025-03-28">2025-03-28</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-03-28/minutes.md">Meeting minutes</a></td>
                                </tr>
                                <tr>
                                    <td><time datetime="2025-05-23">2025-05-23</time></td>
                                    <td>
                                        <a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-05-23/minutes.md">Meeting minutes</a>,
                                        <a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-05-23/membership-policy.pdf">Membership policy</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td><time datetime="2025-05-29">2025-05-29</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-05-29/RESOLUTION%20OF%20THE%20BOARD%20OF%20DIRECTORS%20OF%20THE%20OPEN%20SOURCE%20ENDOWMENT%20FOUNDATION%20%28Adopted%20by%20Unanimous%20Written%20Consent%20In%20Lieu%20of%20a%20Meeting%20Pursuant%20to%20Section%203.pdf">Resolution re Vanguard account</a></td>
                                </tr>
                                <tr>
                                    <td><time datetime="2025-06-25">2025-06-25</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-06-25/Board%20decision%20re%20T%20Bonds%20%E2%80%A2%20konstantin%40endowment.dev.pdf">Resolution re T-Bonds</a></td>
                                </tr>
                                <tr>
                                    <td><time datetime="2025-08-08">2025-08-08</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-08-08/minutes.md">Meeting minutes</a></td>
                                </tr>
                                <tr>
                                    <td><time datetime="2025-12-04">2025-12-04</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2025-12-04/minutes.md">Meeting minutes</a></td>
                                </tr>
                                <tr>
                                    <td><time datetime="2026-02-10">2026-02-10</time></td>
                                    <td><a href="https://github.com/osendowment/foundation/blob/main/docs/board/2026-02-10/minutes.md">Meeting minutes</a></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="category-listing">
                        <h2>Other</h2>
                        <div>
                            <ul>
                                <li>
                                    <a href="https://stats.endowment.dev">Public API</a>
                                </li>
                                <li>
                                    <a href="/docs/giving">Ways to Give</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </article>
</Layout>

<style>
    .category-listing h2 {
        font-size: var(--font-size-6);
        font-weight: 500;
    }

    /* Board table */
    .board-table {
        border-collapse: collapse;
        width: 100%;
        td {
            padding: 0.5rem 0;
            vertical-align: middle;
            border-bottom: 1px solid var(--color-section-border);
        }
        tr:last-child td {
            border-bottom: none;
        }
        td:first-child {
            white-space: nowrap;
            padding-right: 2rem;
            font-family: var(--font-family-mono);
            font-size: var(--font-size-2);
            color: var(--color-text-dark-secondary);
        }
    }
</style>
