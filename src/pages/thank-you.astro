import Layout from '../layouts/Layout.astro';
---

<Layout nodonate={true}>
    <div class="intro container" slot="hero">
        <div class="intro-text flex-center">
            <h1>Thank you for donating</h2>
        </div>
    </div>
    <section>
        <div class="container">
            <div class="cardset">
                <div class="card">
                    <img src="/images/icons/squiggle.svg">
                    <h2>Your impact</h2>
                    <p>
                        Your generous donation is helping create a truly sustainable global open source ecosystem.
                    </p>
                </div>
                <div class="card">
                    <img src="/images/icons/avatar.svg">
                    <h2>Members' club</h2>
                    <p>
                        If you donated $1,000 or more, you are eligible to participate in the Open Source Endowment's governance. We will reach out as the club starts up!
                    </p>
                </div>
            </div>
        </div>
        <div class="team-note">
        <p>
        Questions, ideas, or want to get more deeply involved? We'd love to chat.
        <a href="mailto:konstantin@endowment.dev?cc=jon@endowment.dev" target="_blank">Contact us!</a>
        </p>
    </div>
    </section>
</layout>
