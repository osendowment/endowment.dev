import Layout from '../layouts/Layout.astro';
---

<Layout noindex={true} title="Page Not Found — Open Source Endowment" description="The page you are looking for could not be found.">
    <article>
        <section class="pagesec pagesec--dark not-found-hero">
            <div class="container">
                <div class="insec insec--xpad insec--side-squares insec--side-squares-blue">
                    <div class="sechead flex-center flex-column">
                        <h1>Oops! Page not found.</h1>
                        <p>Maybe you've been looking for something like this?</p>
                        <nav class="not-found-nav">
                            <a class="button button--pill" href="/">Homepage</a>
                            <a class="button button--pill" href="/endowment">Endowment</a>
                            <a class="button button--pill" href="/community">Community</a>
                            <a class="button button--pill" href="/docs">Docs</a>
                            <a class="button button--pill" href="/faq">FAQ</a>
                        </nav>
                    </div>
                </div>
            </div>
        </section>
    </article>
</Layout>

<style>
    .insec--side-squares-blue {
        &:before, &:after {
            background-image: url(/images/decorations/squares-side-blue.svg) !important;
        }
    }
    .not-found-hero {
        height: 100%;
        display: flex;
        align-items: center;
    }
    .not-found-hero .sechead {
        max-width: 40rem;
    }
    .not-found-nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
        position: relative;
        z-index: 2;
    }
</style>
