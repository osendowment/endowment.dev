import NodeFetchCache from 'node-fetch-cache';
import { humanize } from '../util.ts';
import Layout from '../layouts/Layout.astro';

let STATS_URL = 'https://stats.endowment.dev/';

const stats_res = await NodeFetchCache(STATS_URL);
const stats = await stats_res.json();
---

<Layout>
    <article>
        <section class="pagesec pagesec--dark">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-sw-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="insec__safety">
                        <div class="intro container">
                            <div class="intro-text flex-center">
                                <h1>Our Mission</h1>
                                <h2>
                                    The Open Source Endowment (OSE) is a community-driven endowment, dedicated to
                                    sustaining critical open source projects the world relies on.
                                </h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="endowment-blurb">
                        <div>
                            <p>
                                We aim to solve the open source sustainability crisis by enabling additional funding
                                for maintenance of critical open source software that is truly sustainable, systemic
                                and efficient. At the heart of this idea is the endowment model, which has been
                                successfully used by the best private universities for hundreds of years but has
                                never been applied to Open Source until OSE.
                            </p>
                            <p>
                                Our nonprofit is founded by a diverse community of tech founders, executives,
                                investors, and developers across the globe. It uses the similarities between OSS and
                                universities and startup approach to build a scalable tool allowing the tech
                                industry members to support the public good they care about.
                            </p>
                        </div>
                        <div class="branch-illu-container">
                            <div class="branch-illu">
                                <div class="illubox illubox--a">curl</div>
                                <div class="illubox illubox--a">mpld3</div>
                                <div class="illubox illubox--a">pandas</div>
                                <div class="illubox illubox--a">cpython</div>
                                <div class="illubox illubox--b illubox--ok">openssl</div>
                                <div class="illubox illubox--b illubox--ok">imagemagick</div>
                                <div class="illubox illubox--b">tokio</div>
                                <div class="illubox illubox--b illubox--ok">numpy</div>
                                <div class="illubox illubox--c illubox--ok">log4j</div>
                                <div class="illubox illubox--c">joda-time</div>
                                <div class="illubox illubox--c">matplotlib</div>
                                <div class="illubox illubox--c">requests</div>
                                <div class="illubox illubox--d">iced</div>
                                <div class="illubox illubox--d illubox--ok">git</div>
                                <div class="illubox illubox--d">zlib</div>
                                <div class="illubox illubox--d">xz</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="pagesec pagesec--dark">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <div class="sechead sechead--left">
                        <h2>Governance</h2>
                        <p class="narrow-text">
                            The Open Source Endowment Foundation is a US 501(c)(3) tax-exempt charity. It has a bottom-up
                            inclusive governance inspired by the best universities and business practices, that is based on
                            passionate individuals with “skin in the game”, not corporations. We strive to meet the
                            best-in-class standards in terms of neutrality, transparency, and efficiency.
                        </p>
                    </div>
                    <div class="features features--bordered">
                        <div class="feature">
                            <h3><i>50</i>Donors</h3>
                            <p>
                                OSE welcomes all individual and institutional donors, who would like to leave a lasting
                                impact on the open source ecosystem and improve its sustainability.
                            </p>
                            <p>
                                The
                                <a href="/community">donor list</a>
                                is fully open and regularly updated.
                            </p>
                        </div>
                        <div class="feature">
                            <h3><i>20</i>Members</h3>
                            <p>
                                Donors contributing at least $1k/year qualify as Members, invited to advise the board on
                                key matters like the grant model, participate in closed events and appoint board
                                directors.
                            </p>
                            <p>
                                Such rights are legally defined in the
                                <a href="/docs/membership-policy">membership policy</a>.
                            </p>
                        </div>
                        <div class="feature">
                            <h3><i>3</i>Board Directors</h3>
                            <p>
                                The Board of Directors is our main governing body, and appoints the Executive
                                Director for operational management and Advisors.
                            </p>
                            <p>
                                By design, all Directors must also be Members. More details on the board election
                                can be found in the
                                <a href="/docs/bylaws">bylaws</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section>
            <div class="container">
                <div class="insec insec--xpad">
                    <h2>Team</h2>
                    <div class="team-member-list">
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/konstantin.webp" alt="A portrait of Konstantin">
                                </div>
                                <h3>
                                    <div class="team-member__nameline">
                                        <a href="https://www.linkedin.com/in/kvinogradov/" target="_blank">Konstantin Vinogradov</a>
                                    </div>
                                    <em>Board Director, Chairman</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    General Partner at
                                    <a href="https://runacap.com/" target="_blank">Runa Capital</a>
                                    ($0.5B+ AUM), who focuses on early-stage OSS investments.
                                    Previously co&#x2011;founded an endowment which grew from $50K to $600K+ in 12 months. Publishes the
                                    <a href="https://runacap.com/ross-index/" target="_blank">ROSS Index</a>,
                                    a quarterly data-driven rating of top open source startups.
                                </p>
                            </div>
                        </div>
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/chad.webp" alt="A portrait of Chad">
                                </div>
                                <h3>
                                    <a href="https://www.linkedin.com/in/chadwhitacre/" target="_blank">Chad Whitacre</a>
                                    <em>Board Director, Secretary</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    Head of Open Source at application monitoring platform
                                    <a href="https://sentry.io/" target="_blank">Sentry</a> (used by 4M+ developers) and the
                                    leader of the
                                    <a href="https://opensourcepledge.com" target="_blank">Open Source Pledge</a>,
                                    a cultural initiative to get companies to pay open source maintainers.
                                    Founded OSS funding pioneer Gratipay (2012–2018).
                                </p>
                            </div>
                        </div>
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/maxim.webp" alt="A portrait of Maxim">
                                </div>
                                <h3>
                                    <a href="https://www.linkedin.com/in/maxim/" target="_blank">Maxim Konovalov</a>
                                    <em>Board Director, Treasurer</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    Co-founder and ex VP Engineering at
                                    <a href="https://nginx.com" target="_blank">Nginx</a>,
                                    the world's leading web server, used by 400M+ websites, acquired for ~$0.7B in 2019.
                                    Former VP Engineering at
                                    <a href="https://www.f5.com/" target="_blank">F5</a>.
                                    Seasoned supporter of FreeBSD.
                                </p>
                            </div>
                        </div>
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/jonathan.webp" alt="A portrait of Jonathan">
                                </div>
                                <h3>
                                    <div class="team-member__nameline">
                                        <a href="https://www.linkedin.com/in/jonathan-starr-b04032284/" target="_blank">Jonathan Starr</a>
                                    </div>
                                    <em>Executive Director</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    Program Manager at
                                    <a href="https://numfocus.org" target="_blank">NumFOCUS</a>,
                                    a nonprofit foundation supporting scientific OSS such as
                                    <a href="https://pandas.pydata.org/" target="_blank">Pandas</a>.
                                    Co-Founder of
                                    <a href="https://www.scios.tech/" target="_blank">SciOS</a>
                                    and the
                                    <a href="https://iosp.io/" target="_blank">The Institute of Open Science Practices</a>,
                                    focusing on sustainable open science.
                                </p>
                            </div>
                        </div>
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/amy.webp" alt="A portrait of Amy">
                                </div>
                                <h3>
                                    <a href="https://www.linkedin.com/in/amy3parker/" target="_blank">Amy Parker</a>
                                    <em>Advisor</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    Chief Fundraising Officer at the
                                    <a href="https://openssl-foundation.org/" target="_blank">OpenSSL Foundation</a>
                                    and former Director of the
                                    <a href="https://wikimediaendowment.org/" target="_blank">Wikipedia Endowment</a>.
                                    Served as Director of Individual Giving at the Smithsonian and the New York Public Library
                                </p>
                            </div>
                        </div>
                        <div class="team-member card">
                            <div class="team-member__head">
                                <div class="team-member__image">
                                    <img src="/images/team/vlad.webp" alt="A portrait of Vlad">
                                </div>
                                <h3>
                                    <a href="https://vlad.website" target="_blank">Vlad-Stefan Harbuz</a>
                                    <em>Advisor</em>
                                </h3>
                            </div>
                            <div class="team-member__desc">
                                <p>
                                    Maintainer of the
                                    <a href="https://opensourcepledge.com" target="_blank">Open Source Pledge</a>.
                                    Core developer of OSS funding service
                                    <a href="https://thanks.dev" target="_blank">thanks.dev</a>.
                                    Helped build software used by the Gates Foundation to allocate $1B in healthcare funding.
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="mini-note">
                        <p>
                            Looking to contribute to the Open Source Endowment and join our team of volunteers? Please
                            <a href="mailto:donors@endowment.dev" target="_blank">contact us</a>.
                        </p>
                    </div>
                </div>
            </div>
        </section>
        <section class="pagesec">
            <div class="container">
                <div class="insec insec--xpad insec--noborder-right insec--side-squares">
                    <div class="side-kpi-section">
                        <div>
                            <h2>Investing strategy</h2>
                            <p>
                                OSE invests received donations in low-risk assets, and provides grants only from
                                investment income. It enables long term planning and sustainable support for OSS.
                            </p>
                            <p>
                                Before obtaining a 501(c)(3) status, OSE has been investing in US Treasury bonds, whose
                                yield matches our target spend rate of 5% per year.
                            </p>
                            <p>
                                Later, these T-bonds will be complemented by slightly more risky assets selected by the
                                outsourced CIO, which should increase the expected portfolio returns to 7-8%
                            </p>
                        </div>
                        <div class="side-kpis">
                            <div>
                                <i>${humanize(stats.investment_account.total_current_value)}</i>
                                <span>OSE investment portfolio value</h2>
                                <small>
                                    Last updated on
                                    <a href="https://stats.endowment.dev/">Nov 11, 2025</a>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <section class="pagesec pagesec--dark">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <h2 class="sechead sechead--left">Distribution</h2>
                    <div class="distribution-layout">
                        <div class="distribution-copy">
                            <p>
                                OSE utilizes a data-driven selection process to fund critical open source projects through grants and proactive outreach.
                            </p>
                            <p>
                                Our open algorithmic model, developed in public along-side our Members and the broader open source community,
                                surfaces projects where our funding can achieve the greatest impact.
                            </p>
                            <p>
                                The model evaluates open source projects on two dimensions: how valuable it is to the global
                                software ecosystem, and how at-risk it is due to underfunding or maintenance gaps. This approach
                                surfaces the "invisible infrastructure" that powers millions of applications but rarely attracts
                                funding through traditional channels.
                            </p>
                        </div>
                        <div class="distribution-cards">
                            <div class="feature">
                                <h3>Grant Applications</h3>
                                <p>
                                    Projects apply during structured funding cycles with defined criteria.
                                </p>
                            </div>
                            <div class="feature">
                                <h3>Proactive Identification</h3>
                                <p>
                                    Our model surfaces critical projects that haven't applied.
                                </p>
                            </div>
                        </div>
                    </div>

                    <h3 class="subsection-header">Value x Risk Framework <em>(illustrative)</em></h3>
                    <div class="framework-container">
                        <div class="framework-table-wrapper">
                            <table class="framework-table">
                                <thead>
                                    <tr>
                                        <th>Value</th>
                                        <th>Risk</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="framework-subhead">
                                        <td><em>How critical is this project?</em></td>
                                        <td><em>How vulnerable is it?</em></td>
                                    </tr>
                                    <tr>
                                        <td>Dependency depth & dependents</td>
                                        <td>Active maintainers & bus factor</td>
                                    </tr>
                                    <tr>
                                        <td>Download volume</td>
                                        <td>Issue response time</td>
                                    </tr>
                                    <tr>
                                        <td>Ecosystem impact if removed</td>
                                        <td>Security posture</td>
                                    </tr>
                                    <tr>
                                        <td>Community endorsements</td>
                                        <td>Current funding level</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="priority-matrix">
                            <div class="priority-formula">VALUE &times; RISK = GRANT PRIORITY</div>
                            <div class="priority-row priority-row--high">
                                <span class="priority-label">High &times; High</span>
                                <span class="priority-result">Highest priority</span>
                            </div>
                            <div class="priority-row">
                                <span class="priority-label">High &times; Low</span>
                                <span class="priority-result">Well-supported, monitor</span>
                            </div>
                            <div class="priority-row">
                                <span class="priority-label">Low &times; High</span>
                                <span class="priority-result">Case-by-case review</span>
                            </div>
                            <div class="priority-row priority-row--low">
                                <span class="priority-label">Low &times; Low</span>
                                <span class="priority-result">Lower priority</span>
                            </div>
                        </div>
                    </div>
                    <p class="framework-note">
                        The model is openly developed in our
                        <a href="https://github.com/osendowment/model" target="_blank">GitHub repository</a>
                        and iteratively improved based on outcomes and community feedback.
                    </p>
                </div>
            </div>
        </section>
        <section class="pagesec">
            <div class="container">
                <div class="insec insec--xpad">
                    <h2>Selection Process</h2>
                    <div class="selection-process">
                        <div class="process-step">
                            <div class="process-step__number">1</div>
                            <div class="process-step__content">
                                <h4>Model Development</h4>
                                <p>Community and Members contribute to model design</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">2</div>
                            <div class="process-step__content">
                                <h4>Member Vote</h4>
                                <p>Members select which model to use for distribution round</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">3</div>
                            <div class="process-step__content">
                                <h4>Model Runs</h4>
                                <p>Algorithm evaluates projects and generates rankings</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">4</div>
                            <div class="process-step__content">
                                <h4>Human Review</h4>
                                <p>Staff and community review model outputs for accuracy and context</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">5</div>
                            <div class="process-step__content">
                                <h4>Project Selection</h4>
                                <p>Final projects chosen based on review</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">6</div>
                            <div class="process-step__content">
                                <h4>Due Diligence</h4>
                                <p>Legal and logistical review of selected projects</p>
                            </div>
                        </div>
                        <div class="process-arrow">&darr;</div>
                        <div class="process-step">
                            <div class="process-step__number">7</div>
                            <div class="process-step__content">
                                <h4>Board Approval</h4>
                                <p>Board reviews and approves final distribution</p>
                            </div>
                        </div>
                    </div>
                    <p class="process-note">
                        Every distribution involves community input, multiple layers of human judgment, etreme transparency, and board oversight.
                    </p>
                </div>
            </div>
        </section>
        <section class="pagesec pagesec--dark">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <h2>Recognition Awards</h2>
                    <div class="recognition-content">
                        <p>
                            OSE offers recognition awards to honor individuals who have made extraordinary contributions
                            to critical open source software. These awards honor the people who have quietly kept critical
                            software running for years.
                        </p>
                    </div>
                </div>
            </div>
        </section>
    </article>
</Layout>

<style>
    .intro-text {
        h2 {
            @media (max-width: 800px) {
                font-size: 1.5rem;
            }
        }
    }
    .endowment-blurb {
        display: flex;
        align-items: center;
        gap: 14rem;
        @media (max-width: 1000px) {
            flex-direction: column;
            gap: 4rem;
            align-items: center;
        }
        p {
            @media (min-width: 801px) {
                font-size: 1.3rem;
            }
        }
    }

    /* Distribution Section */
    .subsection-header {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid var(--color-section-border-dark-secondary);
        font-size: 1.5rem;
    }
    .distribution-layout {
        display: flex;
        gap: 4rem;
        @media (max-width: 900px) {
            flex-direction: column;
            gap: 2rem;
        }
    }
    .distribution-copy {
        flex: 1;
    }
    .distribution-cards {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        .feature {
            padding: 1.5rem;
            border: 1px solid var(--color-section-border-dark-secondary);
        }
    }

    /* Value x Risk Framework */
    .framework-container {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 3rem;
        align-items: start;
        margin: 2rem 0;
        @media (max-width: 900px) {
            grid-template-columns: 1fr;
        }
    }
    .framework-table {
        width: 100%;
        border-collapse: collapse;
        th, td {
            padding: 0.75rem 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }
        th {
            font-weight: 600;
            background: rgba(255, 255, 255, 0.05);
        }
        .framework-subhead td {
            font-style: italic;
            opacity: 0.7;
            padding-top: 0.5rem;
            padding-bottom: 0.5rem;
        }
    }
    .priority-matrix {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 1.5rem;
    }
    .priority-formula {
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
    }
    .priority-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        &:last-child {
            border-bottom: none;
        }
    }
    .priority-row--high {
        font-weight: 600;
        color: var(--color-secondary-bright);
    }
    .priority-row--low {
        opacity: 0.6;
    }
    .priority-label {
        font-family: monospace;
    }
    .framework-note {
        margin-top: 2rem;
        opacity: 0.8;
    }

    /* Selection Process */
    .selection-process {
        max-width: 500px;
        margin: 2rem auto;
    }
    .process-step {
        display: flex;
        align-items: flex-start;
        gap: 1.25rem;
        padding: 1rem 0;
    }
    .process-step__number {
        flex-shrink: 0;
        width: 2.5rem;
        height: 2.5rem;
        background: var(--color-gray);
        border: 1px solid var(--color-section-border);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1rem;
    }
    .process-step__content {
        h4 {
            margin: 0 0 0.25rem 0;
            font-size: 1.1rem;
        }
        p {
            margin: 0;
            opacity: 0.8;
            font-size: 0.95rem;
        }
    }
    .process-arrow {
        text-align: center;
        font-size: 1.25rem;
        opacity: 0.4;
        padding-left: 0.5rem;
    }
    .process-note {
        text-align: center;
        margin-top: 2rem;
        font-style: italic;
        opacity: 0.8;
    }

    /* Recognition Awards */
    .recognition-content {
        max-width: 700px;
        p {
            font-size: 1.15rem;
            line-height: 1.7;
        }
    }
</style>
