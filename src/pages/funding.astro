---
import Layout from '../layouts/Layout.astro';
import NominationForm from '../components/NominationForm.tsx';
---

<Layout title="Nominate OSS for Funding — Open Source Endowment" description="Nominate critical, underfunded open source projects for OSE grant funding through our open, community-developed model.">
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "MonetaryGrant",
        "name": "OSE Microgrant for Critical Open Source Software",
        "description": "Microgrants of approximately $5,000 awarded to high-risk candidates among the most valuable open source software projects, selected via a data-driven Value-Risk scoring model.",
        "amount": {
            "@type": "MonetaryAmount",
            "currency": "USD",
            "value": "5000"
        },
        "funder": {
            "@type": "Organization",
            "name": "Open Source Endowment Foundation",
            "url": "https://endowment.dev/"
        }
    })} />
    <article>
        <!-- Hero (same structure as Docs page) -->
        <section class="pagesec pagesec--dark pagesec--tight">
            <div class="container">
                <div class="insec insec--xpad insec--ytight">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-sw-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="sechead sechead--min-height flex-center flex-column">
                        <h1>Nominate OSS for Funding</h1>
                        <p>
                            Know an open source project that deserves support?
                            Help us find the most critical yet underfunded OSS.
                            Community nominations are an important input for our model,
                            and self-nominations are welcome too!
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Nomination Form + Sidebar -->
        <section class="pagesec">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="nominate-layout">
                        <div class="nominate-sidebar">
                            <div class="sidebar-card">
                                <h3>Eligibility</h3>
                                <p>
                                    Only independent free and open source software is eligible — no corporate
                                    or VC-funded projects, and no projects with associated startups.
                                    See our <a href="/faq">FAQ</a> for details.
                                </p>
                            </div>

                            <div class="sidebar-card">
                                <h3>Community Input</h3>
                                <p>
                                    Projects are selected through an open
                                    <a href="https://github.com/osendowment/model" target="_blank">model</a>,
                                    co-developed with OSE
                                    <a href="/endowment#governance">Members</a>.
                                    Your nominations are one of many data inputs
                                    used by the selection model.
                                </p>
                            </div>

                            <div class="sidebar-card">
                                <h3>Funding Format</h3>
                                <p>
                                    OSE provides ~$5,000 microgrants to the most valuable independent OSS.
                                    Funding is dedicated to improving security and stability
                                    or rewarding long-term maintainers.
                                </p>
                            </div>

                        </div>
                        <div class="nominate-main">
                            <NominationForm client:load />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Selection Process -->
        <section class="pagesec pagesec--dark">
            <div class="container">
                <div class="insec insec--xpad">
                    <div class="squares squares--corner-dark-sw-outer"></div>
                    <div class="squares squares--corner-dark-ne-inner"></div>
                    <div class="squares squares--corner-dark-ne-outer"></div>
                    <h2 class="sechead sechead--left">Selection Process</h2>
                    <div class="selection-steps">
                        <div class="step">
                            <span class="step-num">1</span>
                            <h3>Collecting Inputs</h3>
                            <p>We collect nominations from the open source community, which highlight valuable projects that need support most.</p>
                            <p>Such inputs help OSE and its Members finalize the grant model that shapes how nominations and other signals are scored.</p>
                        </div>
                        <div class="step">
                            <span class="step-num">2</span>
                            <h3>Scoring Projects</h3>
                            <p>Nominations feed into our <a href="/endowment#model">Value-Risk framework</a>, which has many other inputs: downloads, dependents, security, bus factor, etc.</p>
                            <p>The model finds high-value, at-risk projects: widely used software that lacks funding or active contributors.</p>
                        </div>
                        <div class="step">
                            <span class="step-num">3</span>
                            <h3>Outreach &amp; Due Diligence</h3>
                            <p>The OSE team contacts top-scoring projects to verify eligibility, independence, and interest in a grant.</p>
                            <p>An operational review ensures funds can be received by maintainers directly or via fiscal sponsors.</p>
                        </div>
                        <div class="step">
                            <span class="step-num">4</span>
                            <h3>Approval &amp; Distribution</h3>
                            <p>The Board of Directors reviews due diligence results and approves the final grant list for each funding round.</p>
                            <p><strong>The first grant distribution round is planned for Q2 2026.</strong></p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </article>
</Layout>

<style>
    /* Two-column layout */
    .nominate-layout {
        display: flex;
        gap: 4rem;
        align-items: flex-start;
        @media (max-width: 900px) {
            flex-direction: column;
            gap: 2.5rem;
        }
    }
    .nominate-main {
        flex: 2;
        min-width: 0;
        padding: 2rem;
        background: #f5f7fa;
        border: 1px solid var(--color-primary-fade1);
        border-radius: var(--border-radius);
        h2.sechead {
            padding-top: 0;
            margin-bottom: 0.5rem;
        }
        @media (max-width: 900px) {
            width: 100%;
            padding: 0;
            background: none;
            border: none;
        }
    }
    .nominate-sidebar {
        flex: 1;
        min-width: 0;
    }

    /* Sidebar cards */
    .sidebar-card {
        padding: 1.25rem 0 1.25rem 1.5rem;
        border-left: 2px solid var(--color-primary-fade1);
        h3 {
            margin: 0 0 0.5rem;
            font-size: 1.1rem;
            font-weight: 600;
        }
        p {
            margin: 0;
            font-size: var(--font-size-3);
            line-height: 1.7;
            color: var(--color-text-dark-secondary);
        }
        & + .sidebar-card {
            margin-top: 1.25rem;
        }
    }

    /* Selection Process */
    .selection-steps {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        @media (max-width: 600px) {
            grid-template-columns: 1fr;
        }
    }
    .step {
        padding: 1.5rem 1.75rem;
        border: 1px solid var(--color-section-border-dark-secondary);
        position: relative;
    }
    .step-num {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 1.6rem;
        height: 1.6rem;
        border-radius: 50%;
        border: 1px solid var(--color-primary-fade1);
        font-size: 0.75rem;
        font-weight: 600;
        color: var(--color-primary-light);
        margin-bottom: 0.75rem;
    }
    .step h3 {
        margin: 0 0 0.65rem;
        font-size: 1.05rem;
    }
    .step p {
        font-size: 0.88rem;
        line-height: 1.6;
        color: var(--color-text-light-faded);
        margin: 0 0 0.5rem;
        &:last-child {
            margin-bottom: 0;
        }
    }
    .step a {
        color: var(--color-primary-light);
        text-decoration: underline;
        text-underline-offset: 2px;
    }

</style>
